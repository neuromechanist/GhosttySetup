# GhosttySetup: Theme-aware Ghostty configuration
# System theme aware, split dividers, opacity control

# Theme configuration - auto-switches based on system appearance
theme = dark:GhosttyDark,light:GhosttyLight

# Font configuration
font-family = "JetBrains Mono"
font-size = 13

# Window appearance
window-decoration = true
window-padding-x = 2
window-padding-y = 2

# Split appearance (dynamically updated by theme watcher)
# These values are overridden by the theme watcher script
split-divider-color = #f0f0f0
unfocused-split-fill = #f0f0f0
unfocused-split-opacity = 0.99

# Shell configuration
shell-integration = detect
command = /bin/zsh --login

# Key bindings (Ghostty-compatible with WezTerm muscle memory)
# Shift+Enter sends ESC+Enter
keybind = shift+enter=text:\x1b\r

# Pane splitting (match WezSetup bindings)
keybind = super+d=new_split:right
keybind = super+shift+d=new_split:down

# Pane navigation
keybind = super+shift+left=goto_split:left
keybind = super+shift+right=goto_split:right
keybind = super+shift+up=goto_split:top
keybind = super+shift+down=goto_split:bottom

# Pane resize
keybind = super+ctrl+left=resize_split:left,10
keybind = super+ctrl+right=resize_split:right,10
keybind = super+ctrl+up=resize_split:up,10
keybind = super+ctrl+down=resize_split:down,10

# Close pane/tab
keybind = super+w=close_surface

# Tab management
keybind = super+t=new_tab
keybind = super+shift+w=close_tab

# Tab navigation
keybind = super+shift+bracketleft=previous_tab
keybind = super+shift+bracketright=next_tab

# Copy/Paste
keybind = super+c=copy_to_clipboard
keybind = super+v=paste_from_clipboard

# Search
keybind = super+f=toggle_quick_terminal

# Clear scrollback
keybind = super+k=clear_screen

# Font size
keybind = super+equal=increase_font_size:1
keybind = super+minus=decrease_font_size:1
keybind = super+0=reset_font_size

# Performance settings
macos-non-native-fullscreen = true
